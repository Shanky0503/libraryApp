<form>
    <div class="form-group">
        <label for="emailInput">Email Address</label>
        {{!-- <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"> --}}
        {{input type="email" value=email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="form-group">
        <label for="textArea">Text Message</label>
        {{!-- <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea> --}}
        {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}        
    </div>
    <button type="submit" class="btn btn-primary" {{action 'sendMessage'}} disabled={{isContactDisabled}}>Send Message</button>
    <br/><br/>
    {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}
</form>